
.content-item{
	margin-top: 35rpx;
	padding: 20rpx;
	border-radius: 10rpx;
	background-color: #fff;
	width: 90%;
	margin-left: 2.5%;
}
.content-item-top{
	font-size: 30rpx;
	color: #999999;
	padding-bottom: 20rpx;
	border-bottom: 1px solid #f2f2f2;
}
.content-item-bottom{
	padding: 30rpx 0;
	font-size: 26rpx;
	color: #2d2d2d;
}
.content-item-bottom-left image{
	width: 180rpx;
	height: 180rpx;
	border-radius: 10rpx;
}
.content-item-bottom-right{
	flex-grow: 1;
	padding: 5rpx 0 5rpx 25rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.content-item-bottom-right-top{
	width: 100%;
	font-size: 28rpx;
}
.content-item-bottom-right-middle{
	color: #999999;
}
.content-item .isFinish{
	color: #28c4d3;
}
.to-pay{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding-left: 5%;
	display: flex;
	justify-content: space-between;
	font-size: 27rpx;
	color: #515151;
}

.to-pay view{
	height: 80rpx;
	line-height: 80rpx;
}
.to-pay  text{
	color: #2d2d2d;
	font-size: 35rpx;
}
.to-play-right{
	background-color: #49bdcc;
	width: 30%;
	background-color: #49bdcc;
	color: #fff;
	text-align: center;
	font-size: 32rpx;
}
	
	