.fenbar-item{
	/* margin: 20rpx 0rpx 20rpx 0; */
	font-size: 25rpx;
	padding: 3rpx 10rpx 3rpx 10rpx;
	color: #575757;
	background-color: #f5f5f5;
	border-radius: 8rpx;
	line-height: 40rpx;
	display: inline-block;
}
.fencailist{padding-top: 60rpx !important;}
.fenbar-item-active{
	color: #fff;
	background-color: #49bdcc;
}
.c-list-item{
	padding: 24rpx 3%;
	border-bottom: 1rpx solid #f5f5f5;
}
.c-list-item-titile-left{
	width: 62%;
	font-size: 30rpx;
	text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 88rpx;    
}
.c-list-item-titile-right{
	width: 30%;
}
.c-list-item-titile-right image{
	width: 100%;
	border-radius: 10rpx;
	height: 120rpx;
}
.c-list-item .c-list-item-detail{
	color: #939393;
	font-size: 24rpx;
	margin-top: 20rpx;
}
.c-list-item .c-list-item-detail .c-list-item-detail-right{
	color: #40b9c4;
	font-size: 27rpx;
}
.c-list-item-detail-right image{
	height: 28rpx;
	width: 30rpx;
	/* vertical-align: middle; */
	margin-top: -4rpx;
}