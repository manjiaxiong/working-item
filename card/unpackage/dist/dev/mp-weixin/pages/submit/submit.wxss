
.all {
		width: 100%;
}
.top {
		width: 100%;
		letter-spacing: 4rpx;
}
.top text:nth-child(1) {
		font-size: 42rpx;
}
.top image {
		margin: 50rpx 0;
		width: 200rpx;
		height: 200rpx;
		border-radius: 50%;
}
.top text:nth-child(4) {
		margin-top: 50rpx;
		font-size: 32rpx;
}
.middle {
		width: 100%;
		-webkit-box-align: stretch;
		-webkit-align-items: stretch;
		    -ms-flex-align: stretch;
		        align-items: stretch;
		margin-top: 120rpx;
}
.middle view {
		margin: 20rpx;
}
.middle input {
		width: 540rpx;
		height: 80rpx;
		line-height: 80rpx;
		border-radius: 20rpx;
		padding-left: 20rpx;
}
.tail {
		width: 80%;
		margin-top: 200rpx;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		    -ms-flex-pack: center;
		        justify-content: center;
/* 		width: 620upx; */
