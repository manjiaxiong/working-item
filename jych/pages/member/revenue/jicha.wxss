
.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}
 
.title {
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
 scroll-view{
  padding-bottom: 100rpx;
 }
.title-sel {
  color: #666;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}
 
.title-sel  .line-style{
  background: #fff;
  height: 4rpx;
  width: 40rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.title-sel-selected{
  color: #ff8800;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title-sel-selected .line-style{
  background: #ff8800;
  height: 4px;
  width: 90rpx;
  position: relative;
  margin-top: 10rpx;
}
 
.swiper {
  width: 100%;
  flex: 1;
  overflow: scroll;
  margin: 0 auto;
}
 
.record-item {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 5rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
}
 
.name{
  display: flex;
  justify-content: space-between;
  border: 1px solid #eee;
  padding: 2vh;
  border-radius: 10rpx
}
.menu{
  display: flex;
  justify-content: space-around;
  flex-wrap: nowrap;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
  padding: 10rpx;
  box-shadow: 0 0 4px rgba(0,0,0,0.1);
  -webkit-box-shadow: 0 0 4px rgba(0,0,0,0.1);
    
}
.menu-item{
  text-align: center;
  color: #999;
}
.menu-item view{
  font-size: 25rpx;
}
.swiper-con{
  padding: 20rpx 30rpx 5rpx 30rpx;
  box-sizing: border-box;
  background-color: white;
}
.top-con {
  overflow: hidden;
  padding: 20rpx 0;
}
.top-con image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.herder-con{
  font-size: 26rpx;
}
.top-con-right{
  font-size: 26rpx;
}
.grant-a{
  color: #cfa133;
}
.grant-b{
  color: rgb(104, 231, 20);
}
.top-con .top-con-right{
  float: right
}
.timer{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 26rpx;
  color: #777;
  padding-bottom: 10rpx;
}
.detail{
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: skyblue;
}
.swiper-con{
  margin-top: 20rpx;
}
swiper{
  min-height: 5rem;
}